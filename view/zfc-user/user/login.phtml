<div class="span12">
    <h1><?=$this->translate('Log In')?></h1>
    <hr>
    <div class="alert alert-success">
        <?=sprintf($this->translate('Not registered? <a href="%s">Sign Up</a>.'), $this->url('zfcuser/register') . ($this->redirect ? '?redirect='.$this->redirect : ''))?> <br />
