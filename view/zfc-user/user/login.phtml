    $form->get('identity')->setAttribute('placeholder', $form->get('identity')->getLabel());
    $form->get('credential')->setAttribute('placeholder', $form->get('credential')->getLabel());

    echo $this->formTwb($form, \DluTwBootstrap\Form\FormUtil::FORM_TYPE_HORIZONTAL);
